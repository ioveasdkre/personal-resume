  "dependencies": {
    "@nuxt/eslint": "1.7.1",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.32.0",
    "lucide-vue-next": "^0.535.0",
    "motion-v": "^1.6.1",
    "nuxt": "^4.0.2",
    "reka-ui": "^2.4.1",
    "shadcn-nuxt": "2.2.0",
    "swiper": "^11.2.10",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
